/* CSS Document */
.pay_zy,.pay_pj{ line-height:30px; color:#630; font-size:14px; font-weight:100;}


/*新增弹出层支付说明*/
.all{position:fixed; top:0px; left:0px; width:100%; height:100%; background:rgba(0,0,0,0.7);z-index:9999;}
.all_zz{background:#f5f4f4; margin:0 2%; width:90%; height:80%; position:fixed; top:10%; z-index:9999; border-radius:5px; padding:15px 3%; position:relative;}
.close{ position:absolute; top:10px; right:10px; display:block; width:18px; height:18px; background:url(../images/suzhouboc/dygb.png) 0 0 no-repeat; background-size:18px 18px;}
.all_k{ width:100%; height:98%; overflow:auto; }
.all_zz h3{ font-size:14px; line-height:25px; width:100%; height:auto; overflow:hidden;}
.all_zz p{ font-size:12px;line-height:18px;width:100%; height:auto; border-bottom:#999 solid 1px; padding-bottom:5px; margin-bottom:10px;}


/*收货信息表格*/
.postinformat{ margin:15px; height:auto; overflow:hidden;}
.tab{color:#79797a; font-size:14px; text-align:center; border-collapse:collapse;background-color: #f1f1f1;border: 1px solid #ced2d6;box-shadow: 0px 1px 0px #fff Inset;border-radius: 3px;}
.tab tr{ height:35px; border-bottom:1px solid #ced2d6;}
.tab td{border-right:1px solid #ced2d6;}
.tr1{ background:#DEDADA; font-weight:bold; border-top-left-radius:3px; border-top-right-radius:3px;}

/*确认支付 弹出 **/
.all_zz_postinfor {margin:0 2%; width:90%; height:55%; position:fixed; top:20%; z-index:9999; border-radius:5px; padding:15px 3%; position:relative;}
.all_zz_postinfor p{ font-size:12px;line-height:18px;width:100%; height:auto; border-bottom:#ccc dashed 1px; padding-bottom:5px; margin-bottom:10px;}